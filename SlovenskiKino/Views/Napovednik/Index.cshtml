@model IEnumerable<SlovenskiKino.Models.Napovedi>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SlovenskiNaslov)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AngleskiNaslov)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zanr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dolzina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NaSporeduOd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPodjetjaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SlovenskiNaslov)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AngleskiNaslov)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zanr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dolzina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NaSporeduOd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPodjetjaNavigation.IdPodjetja)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdNapoved">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdNapoved">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdNapoved">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
