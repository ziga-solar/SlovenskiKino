@model IEnumerable<SlovenskiKino.Models.Podjetja>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Podjetje)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Podjetje)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPodjetja">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPodjetja">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPodjetja">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
